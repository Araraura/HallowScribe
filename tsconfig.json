{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "build",
    "strict": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["build", "node_modules"]
}
